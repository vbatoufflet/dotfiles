alias cp="cp -iv"
alias df="df -h"
alias du="du -h"
alias ll="ls -lh"
alias l="ls -lAh"
alias mv="mv -iv"
alias rm="rm -iv"

[[ -n "$(which tmux 2>/dev/null)" ]] && alias tmux="tmux -2"

[[ -n "$(which bat 2>/dev/null)" ]] && alias cat="bat"

[[ -n "$(which gls 2>/dev/null)" ]] && alias ls="gls --color --group-directories-first"

# vim: ft=sh ts=4 sw=4 et
